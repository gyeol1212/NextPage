<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100 yeah" src="/assets/main_1.jpg" alt="First slide">
      <div class="centered0">
        <img src="/assets/mainlogo.png">
      </div>
    </div>
    <div class="carousel-item">
      <img class="d-block w-100 yeah" src="/assets/main_2.jpg" alt="Second slide">
      <div class="centered1 contentfont">
        <p class="contentfont">우리는 세상을</p>
        <p class="contentfont">배우고 탐구합니다</p>
      </div>
      <button type="button" class="btn btn-secondary centered2 contentfont"><%= link_to 'Who We Are', home_about_path%></button>
    </div>
    <div class="carousel-item">
      <img class="d-block w-100 yeah" src="/assets/main_3.jpg" alt="Third slide">
      <div class="centered1 contentfont">
        <p class="contentfont">구글링을</p>
        <p class="contentfont">생활화 해보세요</p>
      </div>
      <button type="button" class="btn btn-secondary centered2 contentfont"><%= link_to 'Network', home_members_path, :class=> "buttonfont"></button>
    </div>
    <div class="carousel-item">
      <img class="d-block w-100 yeah" style="max-height: 100%" src="/assets/main_4.jpg" alt="Fourth slide">
      <div class="centered1 contentfont">
        <p class="contentfont" style="color: grey">우리는</p>
        <p class="contentfont" style="color: grey">이런 것들을 했어요</p>
      </div>
      <button type="button" class="btn btn-secondary centered2 contentfont"><%= link_to 'What We Do', home_result_path%></button>
    </div>
    <div class="carousel-item">
      <img class="d-block w-100 yeah" src="/assets/main_5.png" alt="Fifth slide">
      <div class="centered1 contentfont">
        <p class="contentfont">지금 바로</p>
        <p class="contentfont">넥스트와 <span style="color: #ffc305">함께</span>하세요</p>
      </div>
      <button type="button" class="btn btn-secondary centered2 contentfont"><%= link_to 'Join Us', home_recruit_path%></button>
    </div>
  </div>
  <%# <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a> %>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<script>

$('.carousel').carousel({
  interval: 3000
})

</script>

