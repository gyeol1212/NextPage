<img class="d-block w-100" src="/assets/login_bg.png" alt="Second slide">
<div class="centered1 font">
  <div style='margin-bottom:40px; border-bottom:2px solid grey'>
    <p style='font-size: 27px'><strong>Membership Login</strong></p>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div><%= f.email_field :email, autofocus: true, placeholder: "아이디", autocomplete:"email", style: 'width: 300px; height: 40px; margin-bottom: 7px;' %></div>
    <div><%= f.password_field :password, placeholder: "비밀번호", style: 'width: 300px; height: 40px; margin-bottom:50px' %></div>

    <%= f.submit "로그인", class:'box', style: 'color: white; background-color: #75000F' %>
  <% end %>
  <%= link_to "회원가입", new_registration_path(resource_name), style: 'color: black' %>

</div>