<div class="container text-center postmargin">
  <p id="notice"><%= notice %></p>
  <p class="text-right"><%= link_to('Logout', destroy_user_session_path, method: :delete,style: 'color: #777777; font-weight: 300; font-size: 22px') %></p>

  <h1 class="text-left">Member's Lounge</h1>
  <br><br>
  <div class="d-flex justify-content-between">
    <div style="color: #777777; font-weight: 400; font-size: 22px" class="text-left">ToTal  &nbsp; <%= @total %></div>
    <div class="text-right">
    <!--<button class="text-right searchstyle"><%= link_to 'Search', new_post_path, class: 'noticecolor2', style: 'padding-right:20px; color: #777777; font-weight: 300;font-size: 20px'%></button>-->
      <%= form_tag search_path, method: :get do %>
        <%= select_tag("search[select]", options_for_select([["제목","title"],["내용","content"],["작성자","writer"]] )) %>
        <%= text_field_tag "search[query]" %>
        <%= submit_tag("Search") %>
      <% end %>
    </div>
  </div>
  <br>
  <table class="table table-sm">
    <thead style="font-size: 25px; border-top-style: solid; border-bottom-style: solid">
      <tr style="height: 40px; padding: 0px; ">
        <th class= "py-2" style="width: 170px; padding-left: 100px" >NO.</th>
        <th class= "py-2" style="width: 620px"id="title">TITLE</th>
        <th class= "py-2" style="width: 300px; padding-right: 50px">User</th>
      </tr>
    </thead>



    <tbody style="font-size:20px; border-bottom-style: solid">
    
      <% @notices.each do |post| %>
        <tr class="noticecolor">
          <th class= "py-2" style="width: 170px; padding-left: 100px">공지</th>
          <th class= "py-2" style="width: 620px"><%= link_to post.title, post, class: 'noticecolor2' %></th>
          <th class= "py-2" style="width: 300px; padding-right: 50px"><%= post.user.name %></th>
        </tr>
      <% end %>

      <% @posts.each do |post| %>
        <tr>
          <td class= "py-2" style="width: 170px; padding-left: 100px"><%= post.id%></td>
          <td class= "py-2" style="width: 620px"><%= link_to post.title, post, class: 'postcolor' %></td>
          <td class= "py-2" style="width: 300px; padding-right: 50px"><%= post.user.name%>
          <%# <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <%# <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <p class="text-right"><button class="buttonstyle"><%= link_to 'New Post', new_post_path, style: 'color: #777777; font-size: 20px'%></button></p>
  <div class="text-center bottombutton">
    <p style="font-size:40px" ><%= paginate @posts %></p>  
  </div>




  <br>

</div>


<script>
  $("#post").css("color", "rgb(124,0,26")
</script>